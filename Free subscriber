<script>
  document.getElementById("year").innerText = new Date().getFullYear();

  function scrollToSection(id){
    document.getElementById(id).scrollIntoView({behavior:"smooth"});
  }

  function generateTitles(){
    const topic = document.getElementById("topicTitle").value.trim();
    const cat = document.getElementById("category").value;
    if(!topic){ document.getElementById("titleOut").innerText="‚ùå Pehle topic likho."; return; }

    const titles = [
      `üî• ${topic} | ${cat} Video (Must Watch)`,
      `üò± ${topic} | Full ${cat} Gameplay / Tutorial`,
      `Top 1 Trick! ${topic} | Hindi`,
      `${topic} | New Episode | OP Moments`,
      `Aaj Kiya ${topic} üòç | ${cat} Challenge`,
      `Best Part! ${topic} | Full Video`,
      `Noob To Pro: ${topic} | ${cat}`,
      `Finally! ${topic} | Crazy Result`,
    ];

    document.getElementById("titleOut").innerText = titles.map((t,i)=>`${i+1}. ${t}`).join("\n");
  }

  function generateTags(){
    const key = document.getElementById("keyword").value.trim();
    const lang = document.getElementById("lang").value;
    if(!key){ document.getElementById("tagsOut").innerText="‚ùå Pehle keyword likho."; return; }

    let tags = [
      key, `${key} video`, `${key} hindi`, `${key} tips`, `${key} tutorial`,
      `${key} gameplay`, `${key} new`, `${key} 2026`, `${key} best`,
      "youtube shorts", "youtube long video", "viral", "trending", "new video"
    ];

    if(lang==="Hindi"){
      tags.push("‡§π‡§ø‡§Ç‡§¶‡•Ä ‡§µ‡•Ä‡§°‡§ø‡§Ø‡•ã","‡§®‡§à ‡§µ‡•Ä‡§°‡§ø‡§Ø‡•ã","‡§ü‡•ç‡§∞‡•á‡§Ç‡§°‡§ø‡§Ç‡§ó ‡§µ‡•Ä‡§°‡§ø‡§Ø‡•ã","‡§Ø‡•Ç‡§ü‡•ç‡§Ø‡•Ç‡§¨ ‡§ó‡•ç‡§∞‡•ã‡§•");
    } else {
      tags.push("youtube growth","best content","subscribe");
    }

    document.getElementById("tagsOut").innerText = tags.join(", ");
  }

  function generateDescription(){
    const topic = document.getElementById("descTopic").value.trim();
    const ch = document.getElementById("channelName").value.trim();
    if(!topic || !ch){ document.getElementById("descOut").innerText="‚ùå Topic aur channel name dono likho."; return; }

    const desc = `üî• Welcome to ${ch}!

Aaj ki video: ${topic}

‚úÖ Video pasand aaye to LIKE karo
‚úÖ Channel ko SUBSCRIBE karo
‚úÖ Comment me apni opinion zaroor likho

üìå Follow for more videos:
- Daily Upload / Weekly Upload
- New Challenges
- Funny Moments

#youtube #trending #viral #${topic.replaceAll(" ","")}`;

    document.getElementById("descOut").innerText = desc;
  }

  function bestTime(){
    const aud = document.getElementById("aud").value;
    const type = document.getElementById("ctype").value;

    let result = "";
    if(type==="Long Video"){
      if(aud==="Students") result = "‚è∞ Best Time: 6:30 PM ‚Äì 9:30 PM (School/Coaching ke baad)";
      if(aud==="Working") result = "‚è∞ Best Time: 7:30 PM ‚Äì 10:30 PM (Office ke baad)";
      if(aud==="Mixed") result = "‚è∞ Best Time: 7:00 PM ‚Äì 9:00 PM (Most common prime time)";
    } else {
      if(aud==="Students") result = "‚è∞ Best Time: 12:30 PM ‚Äì 2:00 PM & 7:00 PM ‚Äì 9:00 PM";
      if(aud==="Working") result = "‚è∞ Best Time: 8:00 AM ‚Äì 9:30 AM & 8:00 PM ‚Äì 10:00 PM";
      if(aud==="Mixed") result = "‚è∞ Best Time: 1:00 PM ‚Äì 2:00 PM & 8:00 PM ‚Äì 10:00 PM";
    }

    result += "\n\n‚úÖ Tip: Apne YouTube Analytics me ‚ÄòWhen your viewers are on YouTube‚Äô check karo.";
    document.getElementById("timeOut").innerText = result;
  }

  function createPromo(){
    const link = document.getElementById("channelLink").value.trim();
    const about = document.getElementById("channelAbout").value.trim();
    if(!link || !about){ document.getElementById("promoOut").innerText="‚ùå Link aur about dono likho."; return; }

    const promo = `üî• Hey friends!
Main apna YouTube channel promote kar raha hoon üòä

üìå Channel: ${link}
üé• Content: ${about}

Agar aapko content pasand aaye to SUBSCRIBE zaroor karna ‚ù§Ô∏è
Thanks üôè`;

    document.getElementById("promoOut").innerText = promo;
  }

  function openSubscribe(){
    const link = document.getElementById("channelLink").value.trim();
    if(!link){ alert("Pehle channel link daalo!"); return; }
    const subLink = link.includes("?") ? link + "&sub_confirmation=1" : link + "?sub_confirmation=1";
    window.open(subLink, "_blank");
  }

  function sendMsg(){
    const n = document.getElementById("name").value.trim();
    const e = document.getElementById("email").value.trim();
    const m = document.getElementById("msg").value.trim();
    if(!n || !e || !m){ document.getElementById("contactOut").innerText="‚ùå Please complete all fields."; return; }
    document.getElementById("contactOut").innerText="‚úÖ Message sent (demo). Real website me backend connect karna hoga.";
  }
</script>

